<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.library.mapper.BookMapper">
	<insert id="register" parameterType="com.example.library.entity.Book">
		INSERT INTO book(name, price) VALUES(#{name}, #{price});
	</insert>
	
	<select id="findAll" resultType="com.example.library.entity.Book">
		SELECT * FROM book;
	</select>
	
	<select id="findOne" resultType="com.example.library.entity.Book">
		SELECT * FROM bookã€€WHERE id=#{id};
	</select>
	
	<delete id="delete">
		DELETE FROM book WHERE id=#{id};
	</delete>
</mapper>